<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="TheliaMain" namespace="TntSearch\Model"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../core/vendor/thelia/propel/resources/xsd/database.xsd" >
    <table name="tnt_search_log">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="search_words" type="VARCHAR" size="255" />
        <column name="index" type="VARCHAR" size="255" />
        <column name="locale" type="VARCHAR" size="255" />
        <column name="num_hits" type="INTEGER" />
    </table>

    <table name="tnt_synonym">
        <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="term" type="VARCHAR" size="255" required="true"/>
        <column name="group_id" type="INTEGER" required="true"/>
        <column name="enabled" type="BOOLEAN" required="true" defaultValue="true"/>
        <column name="position" type="INTEGER" required="true"/>

        <index name="idx_synonym">
            <index-column name="term"/>
        </index>
    </table>
</database>